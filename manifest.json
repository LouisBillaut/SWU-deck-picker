{
  "manifest_version": 3,
  "name": "SWUDB Decks",
  "description": "View and copy SWUDB decks after login.",
  "version": "1.0",
  "permissions": [
    "cookies",
    "tabs",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": ["https://swudb.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
